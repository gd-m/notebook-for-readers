<%= form_for @note do |f| -%>
	<%= f.label :content %>
	<%= f.text_field :content %>

	<%= f.label :public, "Public" %>
	<%= f.check_box :public %>

	<br><br>

	<%= f.label :book_id, "Select a Book" %>
	<%= f.collection_select :book_id, Book.all, :id , :name , promp: true %>

	<br><br>
	<% if !params[:book_id] %>
	<h3>Or Create a new Book</h3>
	<%= f.fields_for :book do |b| %>
	<%= b.label :name %>
	<%= b.text_field :name %>
	<% end %>
	<% end %>

	<%= f.submit %>

<% end -%>